<% if Helpers.is_logged_in?(session) %>
  <div class="container">
    <div class="row mt-5">
      <div class="col-1"></div>
      <div class="col">
        <div class="col-md-7 col-lg-8">
          <h4>Registration Permit-Override Request</h4>
          <form method="post" action="/petitions/<%= @petition.id %>/edit">
            <input id="hidden" type="hidden" name="_method" value="patch">
            <input id="hidden" type="hidden" name="petition_type" value="permit-override">
            <div class="row g-3">
              <div class="col-sm-4">
                <label for="uga_myid" class="form-label">Student's UGA MyID</label>
                <input type="text" class="form-control" id="uga_myid" name="uga_myid" value="<%= @petition.student.uga_myid %>">
              </div>
              <div class="col-sm-4">
                <label for="first_name" class="form-label">Student's First Name</label>
                <input type="text" class="form-control" id="first_name" name="first_name" value="<%= @petition.student.first_name %>">
              </div>
              <div class="col-sm-4">
                <label for="last_name" class="form-label">Student's Last Name</label>
                <input type="text" class="form-control" id="last_name" name="last_name" value="<%= @petition.student.last_name %>">
              </div>
              <div class="col-sm-12">
                <div class="input-group">
                  <select class="form-select" id="permit_override" name="permit_override">
                    <option selected><%= @petition.permit_override %></option>
                    <option value="pod">Permission of Department</option>
                    <option value="capacity">Capacity</option>
                    <option value="prereq">Prerequisite</option>
                    <option value="class">Class</option>
                    <option value="level">Level</option>
                  </select>
                </div>
              </div>
              <div class="col-sm-4">
                <label for="course_id">Course ID</label>
                <input type="text" class="form-control" id="course_id" name="course_id" value="<%= @petition.course_id %>">
              </div>
            </div>
            <div class="col-12 mt-3">
              <label for="content">Details</label>
              <textarea class="form-control mt-2" id="content" name="content" rows="5"><%= @petition.content %></textarea>
            </div>
            <button type="submit" class="btn btn-danger" name="submit">save</button>
            <i class="mx-1"></i>
            <a href="/petitions" role="button" class="btn btn-warning my-3 text-white" type="button">cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>